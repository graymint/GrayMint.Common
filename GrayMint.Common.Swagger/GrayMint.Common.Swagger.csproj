<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<Description>NSwag utils</Description>
		<TargetFramework>net10.0</TargetFramework>
		<OutputType>Library</OutputType>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<PropertyGroup>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<LangVersion>Latest</LangVersion>
		<!-- Enable OpenAPI source generator interceptors for .NET 10 -->
		<InterceptorsNamespaces>$(InterceptorsNamespaces);Microsoft.AspNetCore.OpenApi.Generated</InterceptorsNamespaces>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<PropertyGroup>
		<Authors>GrayMint</Authors>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Copyright>GrayMint. All rights reserved.</Copyright>
		<PackageIcon>GrayMint.png</PackageIcon>
		<PackageProjectUrl>https://github.com/graymint/GrayMint.Common</PackageProjectUrl>
		<RepositoryUrl>https://github.com/graymint/GrayMint.Common</RepositoryUrl>
		<Version>2.1.241</Version>
		<FileVersion>$([System.DateTime]::Now.ToString("yyyy.M.d.HHmm"))</FileVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="NSwag.AspNetCore" Version="14.6.2" />
		<PackageReference Include="Scalar.AspNetCore.Microsoft" Version="2.10.3" />
		<PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="10.0.0" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\GrayMint.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

</Project>